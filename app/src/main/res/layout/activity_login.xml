<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#E8F5E9">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk dulu, yuk!"
        android:textSize="26sp"
        android:textColor="#333333"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akses fitur FitGuard dan pantau kesehatanmu!"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- Email Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#72BF78"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Email Anda"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColor="#333333"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Field with visibility toggle -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#72BF78"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#72BF78"
        android:layout_marginBottom="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan Kata Sandi"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textColor="#ffffff"
        android:backgroundTint="#72BF78"
        android:elevation="4dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Link to Register -->
    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya akun? Daftar sekarang"
        android:textColor="#5555AA"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Decorative Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="20dp" />

    <!-- Additional Info Text -->
    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kami melindungi privasi Anda dengan baik. Data Anda akan digunakan untuk meningkatkan pengalaman Anda di FitGuard."
        android:textSize="12sp"
        android:textColor="#777777"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>