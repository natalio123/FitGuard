<!-- item_recommendation_card.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_recommendation_card"
    android:layout_marginBottom="8dp">

    <!-- Recommendation Icon -->
    <ImageView
        android:id="@+id/recommendation_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_food_recommendation" /> <!-- Placeholder icon -->

    <!-- Recommendation Text -->
    <TextView
        android:id="@+id/recommendation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Food Recommendation"
        android:textColor="#fff"
        android:textSize="16sp" />
</LinearLayout>
