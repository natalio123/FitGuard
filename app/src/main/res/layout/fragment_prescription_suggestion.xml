<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header with Back Button -->

    <!-- ScrollView for Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="2dp"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prescription and suggestion"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0C4912"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- CardView: Example -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/metforminCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/metforminNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Metformin"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0C4912"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/dosageTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dosage: 500 mg (Twice a day)"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/purposeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Purpose: Controls blood sugar levels."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/sideEffectsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Side Effects: Nausea, upset stomach."
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tambahkan CardView lainnya dengan struktur serupa -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
