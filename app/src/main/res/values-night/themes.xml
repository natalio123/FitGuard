<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bangkit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">#72BF78</item>
        <item name="colorPrimaryVariant">#72BF78</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">#72BF78</item>
        <item name="colorSecondaryVariant">#72BF78</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Text input and control colors -->
        <item name="colorControlActivated">#72BF78</item>
        <item name="colorControlNormal">#72BF78</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>